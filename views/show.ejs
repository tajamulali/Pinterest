<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 text-white py-20">
    <div class="cards grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
        <% user.posts.forEach(function(elem, index){ %>
            <% 
                let cardSize = index % 3 === 0 ? 'h-72' : index % 3 === 1 ? 'h-96' : 'h-60';
            %>
            <div class="card w-full <%= cardSize %>">
                <div class="w-full h-full bg-zinc-700 rounded-lg overflow-hidden shadow-lg">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
            </div>
        <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>
