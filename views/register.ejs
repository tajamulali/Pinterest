<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1612742491367-04acdf256856?q=80&w=1761&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)]  flex items-center justify-center">
    <div class="w-[30vw] bg-white px-2 py-2 rounded-[30px]">
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
        <h1 class="text-4xl text-center tracking font-semibold text-zinc-700 leading-none">Create An Account</h1>
        <h1 class="text-2xl text-center tracking-tighter text-zinc-700 mt-2">Find new ideas to try</h1>
        <div class="px-20 py-5">
          <form action="/register" method="post">
            <input class="border-2 rounded-md block mb-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full name">
            <input class="border-2 rounded-md block mb-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
            <input class="border-2 rounded-md block mb-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
            <input class="border-2 rounded-md block mb-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
            <input class="border-2 rounded-md block mb-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
            <input class="border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">

            <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.</p>
          </form>
          <a class="inline-block mt-5 text-sm font-semibold tracking-tighter text-zinc-700 text-center w-full" href="/">LogIn Existing Account</a>
        </div>
    </div>
  </div>

